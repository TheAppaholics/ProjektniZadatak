<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.TeamRegistrationPage"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*,Auto">

        <Image Source="pehar.png"
               Aspect="AspectFill"
               Grid.RowSpan="3"
               Opacity="0.2" />

        <Grid BackgroundColor="#228B22" HeightRequest="60" Padding="10" Grid.Row="0">
            <Label Text="Football Tournaments"
                   TextColor="White"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Grid>

        <Grid Grid.Row="1">
            <Button Text="Live Matches"
        BackgroundColor="#4CAF50"
        TextColor="White"
        FontSize="18"
        FontAttributes="Bold"
        CornerRadius="25"
        HeightRequest="55"
        WidthRequest="250"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        Clicked="OnLiveMatchesClicked"
        Grid.Row="1"
        ZIndex="2" />

        </Grid>

        <Grid Grid.Row="2" HeightRequest="70" BackgroundColor="#228B22">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ImageButton Source="user.png"
              Grid.Column="0"
              BackgroundColor="#006400" 
              CornerRadius="25"
              WidthRequest="50"
              HeightRequest="50"
              Padding="10"
              HorizontalOptions="Center"
              Clicked="OnUserClicked"
              VerticalOptions="Center" />

            <ImageButton Source="home.png"
              Grid.Column="1"
              BackgroundColor="#006400"   
              CornerRadius="25"
              WidthRequest="50"
              HeightRequest="50"
              Padding="10"
              HorizontalOptions="Center"
              Clicked="OnHomeClicked"
              VerticalOptions="Center" />

            <ImageButton Source="calendar.png"
              Grid.Column="2"
              BackgroundColor="#006400"  
              CornerRadius="25"
              WidthRequest="50"
              HeightRequest="50"
              Padding="10"
              HorizontalOptions="Center"
              Clicked="OnScheduleClicked"
              VerticalOptions="Center" />
        </Grid>

        <Button Text="+ Register Team"
                BackgroundColor="#4CAF50"
                TextColor="White"
                FontSize="18"
                FontAttributes="Bold"
                CornerRadius="25"
                HeightRequest="55"
                WidthRequest="250"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="0,0,20,20"
                Clicked="OnRegisterTeamClicked"
                Grid.Row="1"
                ZIndex="2" />
    </Grid>
</ContentPage>
