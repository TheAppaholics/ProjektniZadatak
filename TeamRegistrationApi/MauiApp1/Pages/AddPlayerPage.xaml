<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.AddPlayerPage"
             Title="Add Player">

    <StackLayout Padding="20" Spacing="15" VerticalOptions="Center">

        <Entry x:Name="PlayerNameEntry" Placeholder="Player name" />

        <Entry x:Name="PlayerAgeEntry" Placeholder="Age of the player" Keyboard="Numeric" />

        <CheckBox x:Name="SavePlayerCheckBox" />
        <Label Text="Save player" />

        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="Cancel" BackgroundColor="Red" TextColor="White" Clicked="OnCancelClicked" />
            <Button Text="Add" BackgroundColor="Green" TextColor="White" Clicked="OnAddClicked" />
        </StackLayout>

    </StackLayout>
</ContentPage>
