<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Pages.SplashScreenPage"
             BackgroundColor="White"> 
    <Grid RowDefinitions="Auto,*,Auto"
          VerticalOptions="Center"
          HorizontalOptions="Center">
        <Image Source="welcome.png"
               Grid.Row="0"
               HorizontalOptions="Center"
               Margin="0,0,0,20"/>
        <Image Source="trofej.png"
               Grid.Row="1"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               WidthRequest="250" HeightRequest="250"/>
        <VerticalStackLayout Grid.Row="2"
                             HorizontalOptions="Center"
                             Spacing="10"
                             Margin="0,20,0,0">
            <Label Text="FOOTBALL TOURNAMENT"
                   TextColor="Black"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"/>
            <Label Text="MANAGER"
                   TextColor="Black"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"/>

            <Button Text="START"
                    BackgroundColor="#228B22" TextColor="White"
                    FontSize="20"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    HeightRequest="50"
                    WidthRequest="200"
                    Margin="0,30,0,0"
                    Clicked="OnStartButtonClicked"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>